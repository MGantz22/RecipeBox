@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<h1>List of  Categories</h1>

@if (@Model.Count == 0)
{
    <h3> No Categories have been added</h3>
    
}

@foreach (Tag item in Model)
{
    <li>@Html.ActionLink($"{item.TagName}", "Details", new {id = item.TagId})</li>
}
<br>
<a href='@Url.Action("Create")'>
    <button type="button" class="button">New Category</button>
</a>

