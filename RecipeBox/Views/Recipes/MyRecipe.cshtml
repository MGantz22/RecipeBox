@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<h1>@User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>No Recipes have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Recipe item in Model)
    {
      <li>@Html.ActionLink($"{item.RecipeName}", "Details", new { id = item.RecipeId }) </li>
    }
  </ul>
}
<a href='@Url.Action("Create")'>
    <button type="button" class="button">New Recipe</button>
</a>
<a href='@Url.Action("Index")'>
    <button type="button" class="button">Back</button>
</a>