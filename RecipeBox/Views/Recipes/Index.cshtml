@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<h1>All Recipes</h1>
<div class="scrollbar">
@if (@Model.Count == 0)
{
    <h3>No Recipes have been added</h3>
}

@foreach (Recipe item in Model)
{
    <li>@Html.ActionLink($"{item.RecipeName}", "Details", new {id = item.RecipeId})</li>
}
<br>
<a href='@Url.Action("Create")'>
    <button type="button" class="button">New Recipe</button>
</a>
<a href='@Url.Action("Home")'>
    <button type="button" class="button">Home</button>
</a>
</div>
